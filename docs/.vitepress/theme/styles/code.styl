.vp-doc [class*='language-'] > button.copy {
  top: 2px;
  height: 35px;
  width: 35px;
  }

  .vp-doc [class*='language-'] > button.copy.copied, .vp-doc [class*='language-'] > button.copy:hover.copied {
    background-image: var(--vp-icon-copy);
    }

    .vp-doc [class*='language-'] > button.copy.copied::before,
.vp-doc [class*='language-'] > button.copy:hover.copied::before {
  height: 35px;
  }

  .vp-doc div[class*="language-"] > span.lang {
  position: absolute;
  top: 0.85em;
  left: 3em;
  font-family: monospace;
  font-size: 12px;
  color: #ead358;
  font-weight: 700;
}
